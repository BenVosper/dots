#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias a='archey3'
alias g='git'
alias v='vim'
alias r='ranger'

source /usr/share/git/completion/git-prompt.sh
GIT_PS1_SHOWDIRTYSTATE=true
GIT_PS1_SHOWUPSTREAM=auto

BOLD="\[$(tput bold)\]"
THEMECOL1="\[$(tput setaf 1)\]"
THEMECOL2="\[$(tput setaf 2)\]"
THEMECOL3="\[$(tput setaf 3)\]"
GREY="\[$(tput setaf 238)\]"
RESET="\[$(tput sgr0)\]"
GIT='$(__git_ps1 " (%s)")'

PS1="${BOLD}${THEMECOL1}\u ${THEMECOL2}\W${THEMECOL3}${GIT}\n${GREY}Î© ${RESET}"

# Import colorscheme from 'wal' asynchronously
# &   # Run the process in the background.
# ( ) # Hide shell job control messages.
(cat ~/.cache/wal/sequences &)

# To add support for TTYs this line can be optionally added.
source ~/.cache/wal/colors-tty.sh

# Set cursor to steady bar
echo -e "\033[6 q"

# Dotdrop alias
alias dotdrop=~/code/dots/dotdrop.sh --cfg=~/code/dots/config.yaml

# Monitor aliases
alias cm='xrandr-extend secondary && wal -R && setxkbmap gb'
alias dcm='xrandr --output DP1 --off --output HDMI1 --off && wal -R && setxkbmap gb'
alias cms='xrandr --output eDP1 --auto --output HDMI1 --same-as eDP1 --scale-from 3840x2160'

# xclip alias. Copy to primary selection and remove newlines
alias xclip='xclip -selection c -r'

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/benv/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/benv/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/home/benv/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/benv/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

