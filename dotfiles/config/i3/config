set $mod Mod1

font pango:monospace 0

# i3 Gaps
for_window [class="^.*"] border pixel 2
gaps inner 10
gaps outer 1
smart_gaps on

set_from_resource $fg i3wm.color1 #f0f0f0
set_from_resource $bg i3wm.color2 #f0f0f0

# Class                 border  backgr. text indicator child_border
client.focused          $bg     $bg     $fg  $bg       $bg
client.focused_inactive $bg     $bg     $fg  $bg       $bg
client.unfocused        $bg     $bg     $fg  $bg       $bg
client.urgent           $bg     $bg     $fg  $bg       $bg
client.placeholder      $bg     $bg     $fg  $bg       $bg

client.background       $bg

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod+Shift+Tab workspace prev  # !!! Don't remove! Breaks config for some reason

new_window 1pixel

bar {
	font pango: monospace 12
        status_command i3status | ~/.config/i3status/wrapper.py
	colors {
		background #020202
  		focused_workspace $bg #333333 #ffffff
                statusline #999999
                separator #999999	
	}
        tray_output eDP1
}
