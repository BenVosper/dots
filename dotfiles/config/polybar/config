;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
monitor = ${env:MONITOR:LVDS1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false
bottom = true

background = #cc222222
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 2
module-margin-right = 0

font-0 = Font Awesome 5 Free Regular:style=Regular:size=10
font-1 = Font Awesome 5 Free Solid:style=Solid:size=10
font-2 = Font Awesome 5 Brands Regular:style=Regular:size=10
font-3 = Noto Sans Mono:style=Regular:size=10

modules-left = i3
