general {
        colors = true
	color_good = "#5daf29"
	color_degraded = "#ce7513"
	color_bad = "#a72407"
        interval = 5
	output_format = "i3bar"
}

order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "%essid"
        format_down = "Not Connected"
}

battery all {
        format = "%status %percentage"
}

tztime local {
        format = "%d/%m/%Y %H:%M:%S"
}

volume master {
        format = "ðŸ”‰: %volume"
        format_muted = "ðŸ”‡: MUTED"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
